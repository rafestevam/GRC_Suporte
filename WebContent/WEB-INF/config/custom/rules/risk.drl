	no-loop true

	when

	then
		set "name"                     mandatory
		set "description"              mandatory
		set "process"                  mandatory
		set "risktype"                 mandatory
		set "risk_management_relevant" mandatory

end


rule "define notification to attribute visible [I,V]"
salience 10650
no-loop true
when
    value comparison fulfilled: ":transient:" attr_value "rm_notifications_quantitative" "EQUALS" value "false" AND
    value comparison fulfilled: ":transient:" attr_value "rm_notifications_qualitative" "EQUALS" value "false"
then
    set "notification_to" invisible
end

rule "define quantitative notification threshold attribute visible [I,V]"
    salience 10640
    no-loop true
    when
        value comparison fulfilled: ":transient:" attr_value "rm_notifications_quantitative" "EQUALS" value "false"
    then
        set "th_exp_min_loss" invisible
        set "th_exp_avg_loss" invisible
        set "th_exp_max_loss" invisible
        set "th_red_exp_min_loss" invisible
        set "th_red_exp_avg_loss" invisible
        set "th_red_exp_max_loss" invisible
        set "currency" invisible
end

rule "define quantitative notification threshold attribute editable [I,V]"
    salience 10630
    no-loop true
    when
        value comparison fulfilled: ":transient:" attr_value "rm_notifications_quantitative" "EQUALS" value "true"
    then
        set "th_exp_min_loss" editable
        set "th_exp_avg_loss" editable
        set "th_exp_max_loss" editable
        set "th_red_exp_min_loss" editable
        set "th_red_exp_avg_loss" editable
        set "th_red_exp_max_loss" editable
        set "currency" editable
end

rule "define qualitative notification threshold attribute visible [I,V]"
   salience 10620
